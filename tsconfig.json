{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "src/**/*.test.ts"
  ],
  "include": [
    "src",
    "package.json"
  ]
}